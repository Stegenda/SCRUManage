<div class="row">


<div class="col s12 m6">
   <div class="card  red darken-3">
      <div class="card-content white-text">
         <span class="card-title">Na Skróty</span>
         <p class="additionalinfo">W tej sekcji mamy dostęp do najważniejszych akcji. (Tylko admin)</p>
         <div class="divider"></div>

      </div>
      <div class="card-action">
         <%= link_to "Nowy projekt", projects_new_path %>
        <%= link_to "Nowy sprint", sprints_new_path %>
          <%= link_to "Nowe zadanie", tasks_new_path %>

      </div>
   </div>
</div>



<div class="col s12 m6">
   <div class="card blue-grey darken-1">
      <div class="card-content white-text">
         <span class="card-title">Lista Użytkowników</span>
         <p class="additionalinfo">W tej sekcji dodajemy użytkowników do projektów. (Tylko admin)</p>
         <div class="divider"></div>
         <ul class="white-text">
            <% @users = User.select("email") %>
            <% @users.each do |user| %>
            <li>
               <%= user.email %>
            </li>
            <% end %>
         </ul>
      </div>
      <div class="card-action">
         <a href="#">Zarządzanie Użytkownikami i Rolami</a>
      </div>
   </div>
</div>

<div class="col s12 m6">
   <div class="card red indigo darken-2">
      <div class="card-content white-text">
         <span class="card-title">Projekty</span>
         <p class="additionalinfo">W tej sekcji dodajemy Projekty. (Tylko admin)</p>
         <div class="divider"></div>
         <ul class="black-text collection">




  <% Project.all.each do |project| %>
    <li class="collection-item avatar">

      <%= image_tag("project.png", :class => "circle") %>
      <span class="title"> <%= link_to project.name, projects_index_path(:id => project.id) %></span>
      <p> <%= project.description %>  </p>
       
     
    </li>
<% end %>


         </ul>
      </div>
      <div class="card-action">
         <a href="#">Zarządzanie projektami</a>
         <a href="#">Dodaj Projekt</a>
         <a href="#">Edytuj Projekt</a>
      </div>
   </div>
</div>


<div class="col s12 m6">
   <div class="card  teal darken-3">
      <div class="card-content white-text">
         <span class="card-title">Sprinty</span>
         <p class="additionalinfo">W tej sekcji dodajemy sprinty do projektów. (Tylko admin)</p>
         <div class="divider"></div>
         <ul class="collection">
             <% Project.all.each do |project| %>
    <li class="collection-item">

      
     <b class="sprint"> Projekt:  <%= link_to project.name, projects_index_path(:id => project.id) %> </b>
      <div class="divider"></div>
       <% @sprints = Sprint.where(project_id: project.id) %>
        <% @sprints.each do |sprint| %>
       
           <p class-"sprint">  <%= sprint.sprintName %> </p>
           <p class="sprintdsc">  <%= sprint.sprintDescription %> </p>
        <% end %>
     
    </li>
<% end %>

         </ul>
      </div>
      <div class="card-action">
         <%= link_to "Nowy sprint", sprints_new_path %>
      </div>
   </div>
</div>




<div class="col s12 m6">
   <div class="card  deep-orange darken-4">
      <div class="card-content white-text">
         <span class="card-title">Zadania</span>
         <p class="additionalinfo">W tej sekcji dodajemy zadania do sprintów. (Tylko admin)</p>
         <div class="divider"></div>
         <ul class="collection">
            <% Sprint.all.each do |sprint| %>
            <li class="collection-item">
               <b class="sprint"> Sprint: </b> <b style="color: #195210;"><%= sprint.sprintName %> </b>
               <div class="divider"></div>
               <% @tasks = Task.where(sprint_id: sprint.id) %>
               <% @tasks.each do |task| %>
               <p >  <%= task.taskName %> </p>
               <p class="sprintdsc">  <%= task.taskDescription %> </p>
               <% end %>

            </li>
            <% end %>
         </ul>
      </div>
      <div class="card-action">
         <%= link_to "Nowe zadanie", tasks_new_path %>
      </div>
   </div>
</div>







</div>
       




